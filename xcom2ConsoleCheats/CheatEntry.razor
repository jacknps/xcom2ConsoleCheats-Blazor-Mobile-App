<Frame CornerRadius="10" BackgroundColor="Color.LightBlue">

    <Grid>
        <Layout>
            <ColumnDefinition GridUnitType="GridUnitType.Absolute" Width="160" />
            <ColumnDefinition GridUnitType="GridUnitType.Star" />
        </Layout>
        <Contents>
            <GridCell Column="0">
                <Label Text="@Entry"
                       FontAttributes="FontAttributes.Bold"
                       VerticalTextAlignment="TextAlignment.Center" />
            </GridCell>
            <GridCell Column="1">
                <Label Text="@Desc"
                       FontAttributes="FontAttributes.Bold"
                       VerticalTextAlignment="TextAlignment.Center" />
            </GridCell>
        </Contents>
    </Grid>

</Frame>

@code
{
    [Parameter]
    public string Entry { get; set; }

    [Parameter]
    public string Desc { get; set; }
}
